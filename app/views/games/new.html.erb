<div class="container text-center">
  <h1 class="mt-3">New game</h1>
  <br><div class="text-center mp-3">
    <ul class="justify-content-center list-group list-group-horizontal">
    <% @letters.each do |letter| %>
    <li class="list-group-item list-group-item-success m-2 rounded-2 border-1 fs-2 text-white"><%= letter.upcase %></li>
    <% end %>
    </ul>
  </div>
  <div class="user-input">
    <br><p>What is the longest word you can find?</p>
    <form action="/score" class="form-inline" data-turbo="false" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :grid, @letters %>
      <div class="input-group mb-3">
        <input type="text" name="word" class="form-control">
        <div class="input-group-append">
          <input type="submit" value="Play" class="form-control btn btn-success">
        </div>
      </div>
    </form>
  </div>
</div>
